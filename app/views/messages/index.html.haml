.wrapper
  = render partial: 'messages/side_bar'

  .right-contents
    .header
      .left-header
        .left-header__title
          = @group.name
          %ul.left-header__members
            %li.member Members:
            %li.member 矢部,
            %li.member 秀明,
            %li.member yabe,
            %li.member hideaki
      .right-header
        = link_to edit_group_path(@group.id), class: "right-header__button" do
          Edit
    .messages
      = render @messages
    = render partial: 'messages/bottom__content'

