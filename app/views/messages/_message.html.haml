.message
  .upper-message
    .upper-message__user
      = message.user.name
    .upper-message__date
      = message.created_at
  .lower-message
    - if message.content.present?
      .lower-message__content
        = message.content
= image_tag message.image.url, class: 'lower-message__image' if message.image.present?
